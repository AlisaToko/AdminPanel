@model List<News>

    <h2>Все Новости</h2>
    <table>
        <tr>
            <th>Наименование новости</th>
            <th>Фотография</th>
        </tr>

        @foreach(var news in Model){
        <tr>
            <td>@news.Name</td>
            <td>@news.Description</td>

            @foreach(var pic in news.Pictures){
            <td>@pic.Name</td>
            <td>
                <img src="@pic.Path" width=200>
                </td>
            }

        </tr>
        }
    </table>
